<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SignInActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/imv"
            android:contentDescription="@string/image_view"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="290dp"
        android:id="@string/textedit_1"
        android:text="@string/textedit_1"/>



</LinearLayout>




    <TextView
        android:id="@+id/textView_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="250dp"
        android:width="410dp"
        android:paddingBottom="100dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="50sp"
        android:text="@string/text_view_2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:id="@+id/edit_1"
        android:text="@string/edit_1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:id="@+id/edit_2"
        android:text="@string/edit_2"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_0"
        android:text="@string/btn_0"
        android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:rippleColor="@android:color/holo_orange_dark"
        app:strokeWidth="2dp"

        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/edit_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="@string/edit_3"
        android:gravity="center"/>

</androidx.appcompat.widget.LinearLayoutCompat>